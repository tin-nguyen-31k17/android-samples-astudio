<resources>
    <!-- Application theme with no action bar -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryDark">@color/brand_secondary</item>
        <item name="colorAccent">@color/brand_accent</item>
    </style>

    <!-- Text Styles -->
    <style name="HeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="FooterText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brand_shadow</item>
    </style>
</resources>
